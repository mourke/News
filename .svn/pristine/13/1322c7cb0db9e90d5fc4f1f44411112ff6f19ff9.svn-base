class RadioButton extends Widget {
  
  private ArrayList<RadioButton> buttonGroup;
  boolean selected;
  
  public RadioButton(int xpos, int ypos, int event, ArrayList<RadioButton> buttonGroup, String label) {    
    super(xpos, ypos, WIDGET_HEIGHT, WIDGET_WIDTH, color(255), color(0), label, event);
    this.buttonGroup = buttonGroup;
    selected = false;
  }
  
  @Override
  public void draw() {
    //fill(255);
    //rect(xpos(), ypos(), width(), height());
    textSize(WIDGET_TEXT_SIZE);
    fill(255);
    text(label(), xpos(), ypos()+height());
    if(selected) {
      strokeWeight(3);
      stroke(255);
      fill(70);//Changed to make it slightly more visible (Cian)
      
    } else {
      noStroke();
      fill(color(255));
    }
    ellipseMode(CORNER);
    ellipse(xpos() + textWidth(label()), ypos()-WIDGET_HEIGHT/2+height(), WIDGET_TEXT_SIZE, WIDGET_TEXT_SIZE);
    noStroke();
  }
  
  void select() {
    for (RadioButton r: buttonGroup) {
      r.deselect();
    }
    
    selected = true;
  }
  
  void deselect() {
    selected = false;
  }
}
