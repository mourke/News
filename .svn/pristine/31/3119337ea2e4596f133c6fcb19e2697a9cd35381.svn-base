class Widget {
  private int xpos;
  private int ypos;
  private int widgetHeight;
  private int widgetWidth;
  private color widgetColour, labelColour;
  private String label;
  private int event;

  Widget() {
    xpos = 0;
    ypos = 0;
    widgetHeight = 0;
    widgetWidth = 0;
    widgetColour = color(255);
    labelColour = color(0);
    label = "null";
    event = -1;
  }

  Widget(int xpos, int ypos, int widgetHeight, int widgetWidth, color widgetColour, color labelColour, String label, int event) {

    this.xpos = xpos;
    this.ypos = ypos;
    this.widgetHeight = widgetHeight;
    this.widgetWidth = widgetWidth;
    this.widgetColour = widgetColour;
    this.labelColour = labelColour;
    this.label = label;
    this.event = event;
  }
  
  Widget(int xpos, int ypos, int event, String label) {
    this.xpos = xpos;
    this.ypos = ypos;
    widgetWidth = WIDGET_WIDTH;
    widgetHeight = WIDGET_HEIGHT;
    widgetColour = color(255);
    labelColour = color(255,0,0);
    this.label = label;
    this.event = event;
  }

  //void setup() {
  //  fill (widgetColour);
  //}

  void draw() {
    stroke(widgetMouseOver(mouseX, mouseY));
    fill(widgetColour);
    rectMode(CORNER);
    rect(xpos, ypos, widgetWidth, widgetHeight);
    fill(labelColour);
    //textAlign(CENTER, BOTTOM);
    text(label, xpos + width/20, ypos + TEXT_BOX_FONT_SIZE*1.3);
    //if (mousePressed && widgetClicked(mouseX, mouseY)) {
    //  //Do something
    //}
  }


  boolean widgetClicked(int mX, int mY) {

    if ((mX>xpos && mX < xpos+widgetWidth && mY >ypos && mY <ypos+widgetHeight)&&mousePressed) {
      return true;
    } else 
    return false;
  }
  
  color widgetMouseOver (int mX, int mY) {
    if (mX>xpos && mX < xpos+widgetWidth && mY >ypos && mY <ypos+widgetHeight) {
      return (255);
    } else 
    return (0);
  }
  
  String label() {
    return label;
  }
  
  int xpos() {
    return xpos;
  }
  
  int ypos() {
    return ypos;
  }
  
  int width() {
    return widgetWidth;
  }
  
  int height() {
    return widgetHeight;
  }
  
  int event() {
    return event;
  }
}
